{
	"name": "novely",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "pnpm dev:preview",
		"init-repo": "pnpm build:parser && pnpm build:vite-plugin-nvl && pnpm build:deepmerge && pnpm build:core && pnpm build:typewriter && pnpm build:particles && pnpm build:toolkit && pnpm build:solid",
		"format": "prettier --write .",
		"dev:core": "pnpm --filter=@novely/core... --parallel dev",
		"build:core": "pnpm --filter=@novely/core... --parallel build",
		"dev:solid": "pnpm --filter=@novely/solid-renderer... --parallel dev",
		"build:solid": "pnpm --filter=@novely/solid-renderer... --parallel build",
		"dev:preview": "pnpm --filter=@novely/preview... --parallel dev",
		"build:preview": "pnpm --filter=@novely/preview... --parallel build",
		"preview:preview": "pnpm --filter=@novely/preview... preview",
		"dev:typewriter": "pnpm --filter=@novely/typewriter... --parallel dev",
		"build:typewriter": "pnpm --filter=@novely/typewriter... --parallel build",
		"dev:particles": "pnpm --filter=@novely/particles... --parallel dev",
		"build:particles": "pnpm --filter=@novely/particles... --parallel build",
		"dev:css": "pnpm --filter=@novely/css... --parallel dev",
		"build:css": "pnpm --filter=@novely/css... --parallel build",
		"dev:parser": "pnpm --filter=@novely/parser... --parallel dev",
		"build:parser": "pnpm --filter=@novely/parser... --parallel build",
		"dev:vite-plugin-nvl": "pnpm --filter=@novely/vite-plugin-nvl... --parallel dev",
		"build:vite-plugin-nvl": "pnpm --filter=@novely/vite-plugin-nvl... --parallel build",
		"dev:standalone": "pnpm --filter=@novely/standalone... --parallel dev",
		"build:standalone": "pnpm --filter=@novely/standalone... --parallel build",
		"dev:deepmerge": "pnpm --filter=@novely/deepmerge... --parallel dev",
		"build:deepmerge": "pnpm --filter=@novely/deepmerge... --parallel build",
		"dev:rive": "pnpm --filter=@novely/rive... --parallel dev",
		"build:rive": "pnpm --filter=@novely/rive... --parallel build",
		"dev:toolkit": "pnpm --filter=@novely/renderer-toolkit... --parallel dev",
		"build:toolkit": "pnpm --filter=@novely/renderer-toolkit... --parallel build",
		"dev:image-format-selector": "pnpm --filter=@novely/image-format-selector... --parallel dev",
		"build:image-format-selector": "pnpm --filter=@novely/image-format-selector... --parallel build"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.18.1",
		"eslint": "^8.56.0",
		"prettier": "^3.2.1"
	}
}
