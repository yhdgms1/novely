{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Novely",
	"patterns": [
		{
      "include": "#numbers"
    },
    {
      "include": "#strings"
    },
		{
      "name": "novely.story-key",
      "match": "^\\w+(?=\\n)",
      "captures": {
        "0": {
          "name": "string.quoted.triple"
        }
      }
    },
		{
      "name": "novely.reserved",
      "match": "%(\\$values1)",
      "captures": {
        "0": {
          "name": "invalid.illegal"
        }
      }
    },
    {
      "name": "novely.js-values",
      "match": "(%)(.*?)(\\n| )",
      "captures": {
        "0": { "name": "constant.character" },
        "1": { "name": "entity.name.type" }
      }
    },
    {
      "name": "novely.map",
      "match": "\\*",
      "captures": {
        "0": { "name": "entity.name.type" }
      }
    },
    {
      "name": "novely.character-escape",
      "match": "\\\\.",
      "captures": {
        "0": { "name": "constant.character.escape" }
      }
    },
    {
      "name": "novely.string-start",
      "match": "  (\\\\)",
      "captures": {
        "0": { "name": "entity.name.type" }
      }
    },
    {
      "name": "novely.action",
      "match": "(!\\b\\w*)",
      "captures": {
        "0": { "name": "keyword.control" }
      }
    }
	],
	"repository": {
		"keywords": {
			"patterns": []
		},
		"numbers": {
			"patterns": [
				{
          "name": "constant.numeric.float.nvly",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)?\\b"
        },
        {
          "name": "constant.numeric.decimal.nvly",
          "match": "\\b[0-9][0-9_]*\\b"
        }
			]
		}
	},
	"scopeName": "novely"
}